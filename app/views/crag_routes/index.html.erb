<h1>Routes for <%= @crag.crag_name %></h1>
<%= link_to "Alphabetize Routes", "/crags/#{@crag.id}/routes?alphabetize=true" %>
<%= form_with url:"/crags/#{@crag.id}/routes/min_pitches", method: :post, local: true do |form| %>
  <%= form.label :pitches, "Minimum number of pitches" %>
  <%= form.number_field :pitches %>
  <%= form.button "Submit" %>
<% end %>
<div><% @crag_routes.each do |route| %>
<h3><%= route.route_name %></h3>
<p>Grade - <%= route.grade %></p>
<p>Sport Route: <%= route.sport_route %></p>
<p>Trad Route: <%= route.trad_route %></p>
<p>Number of Pitches: <%= route.pitches %></p>
<p>Created: <%= route.created_at %>,
   Last Updated: <%= route.updated_at %></p>
<% end  %></div>
<br/>
<%= link_to "Add a route to #{@crag.crag_name}", "/crags/#{@crag.id}/routes/new" %>