
<%= form_with url:'/crags', method: :post, local: true do |form| %>
  <%= form.label :crag_name,'Crag Name' %>
  <%= form.text_field :crag_name %>
<br/>
  <%= form.label :reservation_required_true, 'Reservation Required'%>
  <%= form.radio_button :reservation_required, true %>
<br/>
  <%= form.label :reservation_required, "No Reservation Required", value: false%>
  <%= form.radio_button :reservation_required, false%>
<br/>
  <%= form.label :elevation, "Elevations" %>
  <%= form.text_field :elevation %>
<br/>
  <%= form.submit "Create Crag" %>
<% end %>